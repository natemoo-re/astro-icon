---
import Component from '../components/Component.astro';
import { Sprite } from 'astro-icon';
---

<style lang="css">
	[astro-icon] {
		color: blue;
	}
	[astro-icon="annotation"] {
		color: red;
	}
</style>

<body>
	<Sprite.Provider>
		<h1>Welcome to Astro Icon!</h1>

		<article>
			<h2>Local</h2>
			<!-- This will inline your SVG directly -->
			<Sprite size={24} name="adjustment" />
			<Sprite size={24} name="annotation" />
		</article>

		<article>
			<h2>Custom remote source</h2>
			<!-- Pull your icon from a custom remote source -->
			<Sprite size={24} pack="radix" name="github-logo" />
		</article>
		
		<Component />
	</Sprite.Provider>
</body>
