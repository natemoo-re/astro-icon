---
import load, { fallback, normalizeProps } from "./utils.ts";
export type { Props } from "./Props";

let {
  name,
  pack,
  title,
  optimize = true,
  class: className,
  path,
  ...inputProps
} = Astro.props;

let props = {};

if (pack) {
  name = `${pack}:${name}`;
}

let innerHTML = "";
try {
  const svg = await load(
    name,
    { ...inputProps, class: className },
    optimize,
    path
  );
  innerHTML = svg.innerHTML;
  props = svg.props;
} catch (e) {
  if (import.meta.env.MODE === "production") {
    throw new Error(`[astro-icon] Unable to load icon "${name}"!
${e}`);
  }
  innerHTML = fallback.innerHTML;
  props = { ...fallback.props, ...normalizeProps(inputProps) };
  title = `Failed to load "${name}"!`;
  console.error(e);
}
---

<svg
  {...props}
  astro-icon={name}
  set:html={(title ? `<title>${title}</title>` : "") + innerHTML}
/>
